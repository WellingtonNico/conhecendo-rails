<p id="notice"><%= notice %></p>

<h1>
  <%= Book.model_name.human.pluralize %>
</h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:published_at) %></th>
      <th><%= Book.human_attribute_name(:text) %></th>
      <th><%= Book.human_attribute_name(:value) %></th>
      <th><%= Book.human_attribute_name(:stock) %></th>
      <th><%= Book.human_attribute_name(:person) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.published_at %></td>
        <td><%= book.text.truncate(15) %></td>
        <td><%= number_to_currency(book.value) %></td>
        <td><%= book.stock %></td>
        <td><%= book.person.name.truncate(15) %></td>
        <td><%= link_to 'Ver', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Apagar', book, method: :delete, data: { confirm: 'Tem certeza que deseja apagar este livro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar livro', new_book_path %>
<%= paginate @books %>
